Get-ChildItem ".\confluence" -Recurse -Filter *.md -File | ForEach-Object {
  $t = Get-Content $_.FullName -Raw
  $u = $t `
    -replace '&larr;','←' `
    -replace '&rarr;','→' `
    -replace '&uarr;','↑' `
    -replace '&darr;','↓' `
    -replace '&nbsp;',' '
  if ($u -ne $t) {
    Set-Content -LiteralPath $_.FullName -Value $u -Encoding utf8
    Write-Host "Replaced entities in:" $_.FullName
  }
}
