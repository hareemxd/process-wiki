$parent = 30113793
$root = Resolve-Path -LiteralPath "."   # current directory
$wi   = Join-Path $root "confluence\Work Instructions"

if (-not (Test-Path -LiteralPath $wi)) {
  throw "Folder not found: $wi"
}

Get-ChildItem -LiteralPath $wi -Recurse -Filter *.md -File | ForEach-Object {
  Write-Host "Publishing:" $_.FullName
  python -m md2conf --heading-anchors -r $parent "$($_.FullName)"
}
