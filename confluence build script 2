Get-ChildItem -Path $dest -Recurse -Filter *.md -File | ForEach-Object {
  $p = $_.FullName
  $t = Get-Content -LiteralPath $p -Raw

  # normalize common problem characters
  $t = $t.Replace([char]0x00A0, ' ')           # nbsp -> space
  $t = $t -replace '&(larr|rarr|iuml|uuml|auml|ouml|nbsp);', ''  # kill named entities if they exist in source

  Set-Content -LiteralPath $p -Value $t -Encoding UTF8
}
