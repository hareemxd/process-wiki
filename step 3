& "C:\ProgramData\anaconda3\python.exe" -c "import ssl,socket,base64,textwrap;host='repo.anaconda.com';ctx=ssl.SSLContext(ssl.PROTOCOL_TLS_CLIENT);ctx.check_hostname=False;ctx.verify_mode=ssl.CERT_NONE;s=socket.create_connection((host,443),timeout=10);ss=ctx.wrap_socket(s,server_hostname=host);der=ss.getpeercert(True);b64=base64.b64encode(der).decode();print('-----BEGIN CERTIFICATE-----');[print(b64[i:i+64]) for i in range(0,len(b64),64)];print('-----END CERTIFICATE-----')" > "$env:USERPROFILE\repo_leaf.pem"
